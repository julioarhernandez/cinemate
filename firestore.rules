rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read/write their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Allow other authenticated users to read basic profile info for friend features
      allow read: if request.auth != null;
    }

    // Allow authenticated users to query users collection for finding friends by email
    match /users/{document=**} {
      allow list: if request.auth != null;
    }

    // Friend requests rules
    match /friendRequests/{requestId} {
      // Allow users to read requests they sent or received
      allow read: if request.auth != null && 
                     (resource.data.to == request.auth.uid || 
                      resource.data.from == request.auth.uid);
      
      // Allow users to create requests they're sending
      allow create: if request.auth != null && 
                       request.resource.data.from == request.auth.uid;
      
      // Allow users to delete/cancel requests they sent OR received/declined
      allow delete: if request.auth != null && 
                       (resource.data.to == request.auth.uid || 
                        resource.data.from == request.auth.uid);
      
      // Allow a user to update a request to 'declined' if they are the recipient.
      allow update: if request.auth != null && 
                       resource.data.to == request.auth.uid &&
                       request.resource.data.status == 'declined';
    }

    // Friends lists
    match /users/{userId}/friends/{friendId} {
      // Allow a user to read their own friends list, or allow friends to read each other's basic info
      allow read: if request.auth.uid == userId ||
                   exists(/databases/$(database)/documents/users/$(request.auth.uid)/friends/$(userId));
                   
      // 1. Allow a user to manage their own friends list (add/remove).
      // 2. Allow a user (friendId) to be added to another's (userId) friends list
      //    IF the friend request document exists and is being sent TO the user performing the request.
      //    This is what allows the batched write for accepting a request.
      allow write: if request.auth.uid == userId ||
                    (request.auth.uid == friendId &&
                     get(/databases/$(database)/documents/friendRequests/$(requestId(userId, friendId))).data.to == friendId);
      
      // Only allow a user to delete from their own friends list
      allow delete: if request.auth.uid == userId;
    }
    
    // Ratings & Watched list
    match /users/{userId}/ratings/{ratingId} {
      allow read, write: if request.auth.uid == userId;
      
      // Allow friends to read ratings for social features
      allow read: if request.auth != null && 
                     exists(/databases/$(database)/documents/users/$(request.auth.uid)/friends/$(userId));
    }

    // AI Recommendations history
    match /users/{userId}/recommendations/{recommendationId} {
       allow read, write: if request.auth.uid == userId;
    }
    
    // Helper function to reconstruct potential friend request ID
    function requestId(userA, userB) {
      return userA + "_" + userB;
    }
  }
}
